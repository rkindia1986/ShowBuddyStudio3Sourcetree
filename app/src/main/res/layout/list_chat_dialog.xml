<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_alignParentLeft="true"
        android:layout_width="60dp"
        android:layout_height="60dp"  android:src="@mipmap/ic_app_logo"
        android:id="@+id/chatdialog_image"/>

    <LinearLayout
        android:layout_toRightOf="@id/chatdialog_image"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"   android:textColor="@android:color/black"
            android:layout_height="wrap_content"  android:lineSpacingExtra="5dp"
            android:padding="2dp"
            android:id="@+id/list_chat_dialog_title"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_chat_dialog_message"
            android:textSize="12sp"/>

    </LinearLayout>


    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:id="@+id/image_unread"/>

</RelativeLayout>